{
  "name": "socialsparrow",
  "version": "0.3.17",
  "description": "A utility for extracting product information from e-commerce websites",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "dist/*.map"
  ],
  "scripts": {
    "release": "release-please release-pr --repo-url=github.com/yourusername/socialsparrow --token=$GITHUB_TOKEN",
    "build": "vite build",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "e-commerce",
    "product",
    "extraction",
    "scraping"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.1",
    "jsdom": "^26.0.0",
    "release-please": "^17.0.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  }
}
